<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- when button is clicked -->
    <item android:state_pressed="true">

    <shape>
        <solid 
         android:color="#ff6633"   
            />
        <stroke
            android:width="1dp"
            android:color="#800080"   
             
            />
        <corners 
            android:radius="5dp"
            />
        <padding 
          android:left="10dp" 
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp"
            />
    </shape>
    <!-- default button -->
</item>
<item >
    <shape >
        <gradient 
            android:startColor="#e80c64"
            android:endColor="#800080"
            android:angle="360"
            />
        <stroke 
         android:width="1dp"
         android:color="#e80c64"  
         
            />
        <corners android:radius="3dp"/>
        <padding 
          android:left="10dp" 
          android:right="10dp" 
          android:top="10dp"
          android:bottom="10dp"
            />
    </shape>
</item>
</selector>